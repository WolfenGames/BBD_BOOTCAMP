@model LAB.Models.Person

@{
    ViewData["Title"] = "Delete Person";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="Delete">
    <div class="form-horizontal text-center">
        <p>DELETE :: _ @Model.Name _ FOREVER!!!</p>
        <input type="hidden" asp-for="Id" />
        <div class="form-group">
            <div class="w-100">
                <input type="submit" value="Delete" class="btn btn-danger w-100" />
            </div>
        </div>
        <div class="form-group">
            <div class="w-100">
                <a asp-action="ListAll"><input type="button" value="NO" class="btn btn-success w-100" /></a>
            </div>
        </div>
    </div>
</form>