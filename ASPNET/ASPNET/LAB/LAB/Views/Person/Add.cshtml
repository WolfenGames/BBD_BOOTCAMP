@model LAB.Models.Person

@{
    ViewData["Title"] = "Edit Person";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="Add">
    <div class="form-horizontal">
        <input type="hidden" asp-for="Id" />
        <div class="form-group">
            <label asp-for="Name" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
        </div>
       <div class="form-group">
            <label asp-for="Department" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <select class="form-control" asp-for="Department">
                    @foreach (var d in Model.Dep)
                    {
                        <option>@d.Name</option>
                    }
                </select>
            </div>
            <span asp-validation-for="Department" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Years" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Years" class="form-control" id="yearInput" />
                <span asp-validation-for="Years" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
</form>