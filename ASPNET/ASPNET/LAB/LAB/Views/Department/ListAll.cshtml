@model List<LAB.Models.Departments>

@{
    ViewData["Title"] = "View";
}

<h1>View</h1>
<div class="container-fluid">
    <hr />
		<a asp-action="Add"><input type="button" value="Add a Department" class="btn btn-default w-100"/></a>
    <hr />
    <table class="table w-100">
        <thead>
            <tr>
                <th scope="col">Department</th>
                <th scope="col">Edit</th>
                <th scope="col">Delete</th>
            </tr>
        </thead>
        @foreach (var p in Model)
        {
            <tr>
                <td>@p.Name</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@p.Id"><input type="button" value="EDIT" class="btn btn-default" /></a>
                </td>
                <td>
                    <a asp-action="Delete" asp-route-id="@p.Id"><input type="button" value="DELETE" class="btn btn-default" /></a>
                </td>
            </tr>
        }
    </table>
</div>